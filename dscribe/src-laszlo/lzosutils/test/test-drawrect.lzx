<canvas>
  <script src="../src/draw-utils.js"/>
  <drawview width="200" height="100" align="center" valign="middle">
    <method event="oninit">
    beginPath();
    drawRect(-1, -1, width+2, height+2, 2);
    this.strokeStyle = 0x808080;
    this.fillStyle = 0xff0000;
    stroke();
    </method>
  </drawview>
</canvas>