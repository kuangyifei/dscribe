<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} [%t] %p (%F:%L %M) - %m\n"/>
		</layout>
	</appender>
	
	<appender name="file" class="org.apache.log4j.FileAppender">
		<param name="File" value="bin/temp/dscribe.log"/>
		<param name="Append" value="false"/>		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} [%t] %p (%F:%L %M) - %m\n"/>
		</layout>
	</appender>

	<category name="org.exist">
		<priority value="warn"/>
	</category>

	<category name="org.dbxml">
		<priority value="warn"/>
	</category>

	<category name="org.quartz">
		<priority value="warn"/>
	</category>
	
	<category name="com.ideanest.dscribe.mixt">
		<priority value="debug"/>
	</category>

	<category name="com.ideanest.dscribe.opti.AnnealingDiagramAssigner">
		<priority value="debug"/>
	</category>
	
	<root>
		<priority value="info"/>
		<appender-ref ref="console"/>
		<appender-ref ref="file"/>
	</root>
</log4j:configuration>
